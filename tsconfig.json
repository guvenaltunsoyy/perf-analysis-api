{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": false,
        "outDir": "build",
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "lib": ["es6"],
        "strict": true,
        "baseUrl": "./src"
    },
    "exclude": ["node_modules", "typings"],
    "include": [
        "src/**/*",
        "locales/*",
        "config/**/*",
        "logger/**/*",
        "mongo/**/*"
    ]
}
